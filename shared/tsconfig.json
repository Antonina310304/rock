{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "useUnknownInCatchVariables": false, // Возможно необходимо удаление

    // "declaration": true,
    // "strict": true
    // "forceConsistentCasingInFileNames": true,
    // "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "outDir": "build",
    "rootDir": ".",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true
  }
}
