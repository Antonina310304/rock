generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [uuidOssp(map: "uuid-ossp")]
}
model user {
  id    String    @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  email String
  workout workout[]
}

model workout {
  id    String    @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  date DateTime
  user   user     @relation(fields: [user_id], references: [id])
  user_id String  @db.Uuid
  comments String?
  exercise exercise[]
  cardio Int
}

model exercise_map {
    id       String      @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
    title    String
    exercise exercise[]
}

model exercise {
    id         String      @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
    workout    workout     @relation(fields: [workout_id], references: [id])
    workout_id String  @db.Uuid
    exercise    exercise_map     @relation(fields: [exercise_id], references: [id])
    exercise_id String  @db.Uuid
    comments String?
    approach approach[]
}

model approach {
    exercise   exercise   @relation(fields: [exercise_id], references: [id])
    exercise_id   String  @db.Uuid
    approach Int
    weight Int
    comments String?
    @@id([exercise_id, approach])
}
